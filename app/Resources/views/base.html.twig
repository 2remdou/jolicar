<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Bonjour!{% endblock %}</title>
        {%block stylesheets%}
            {% stylesheets filter='cssrewrite' 
                    'jquery-ui/jquery-ui.min.css'
                    'css/bootstrap/css/*'
                    'css/base.css'
                    'css/index.css'
                    'css/header.css'
                    'js/select2/select2.css'
                    'js/select2/select2-bootstrap.css'
                    'js/Elastislide/css/elastislide.css'
                    output='css/compiled/main.css'
                     %}
                <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />            
            {%endstylesheets%}
        {%endblock stylesheets%}
        {% block otherStylesheets %}

        {% endblock otherStylesheets %}
        {% javascripts
                        'css/bootstrap/js/jquery-min.js'
                        'js/Elastislide/js/modernizr.custom.17475.js'            
                        output='js/compiled/main.js'%}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {%endjavascripts%}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}
        <header>
                {%block header%}
                    {% include 'JcJolieCarBundle::header.html.twig'%}
                {% endblock header%}
        </header>
        <div class="container" id="global">   
            <div id="message" class="row">
                 {% for message in app.session.flashbag.get('message') %}
                     <div class="alert alert-{{ message|typeAlert }}" role="alert">
                         <button type='button' class='close' data-dismiss='alert'>
                             <span aria-hidden='true'>&times;</span>
                             <span class='sr-only'></span>
                         </button>
                         <strong>{{ message|raw }}</strong>
                     </div>
                 {% endfor %}
            </div>
            <div>
                 {% block main%}
                
                {% endblock main%}                
            </div>
           
            <footer>
                {%block footer%}
                
                {%endblock footer%}
            </footer>    
        </div>        
        
        <!--<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>-->
        {% block javascripts%}
            {% javascripts             
                            'jquery-ui/jquery-ui.min.js'
                            'css/bootstrap/js/bootstrap.min.js'
                            'js/outils.js'
                            'js/boot.js'
                            'js/select2/select2.min.js'
                            'js/Elastislide/js/*'
                            'js/index.js'
                            output='js/compiled/main.js'%}
                <script type="text/javascript" src="{{ asset_url }}"></script>
            {%endjavascripts%}
                <script type="text/javascript">
                    $('#tabAccesRapide').elastislide();
                </script>
        {% endblock javascripts%}
        {%block otherScript%}

        {%endblock%}
       {# <script src="{{asset('jquery-1.11.1.min.js')}}"></script>
        {% block javascripts %}
            <script type="text/javascript" src="{{asset('css/bootstrap/js/bootstrap.min.js')}}"></script>
        {% endblock %}#}
        {% endblock %}
    </body>
</html>
