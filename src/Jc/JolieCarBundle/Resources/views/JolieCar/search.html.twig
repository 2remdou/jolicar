{# src/Jc/JolieCarBundle/resources/views/search.html.twig #}
{#{%form_theme form 'JcJolieCarBundle:Form:fields.html.twig'%}#}
{#{{ form_stylesheet(form)}}#}
{#{%form_theme form 'JcJolieCarBundle:Form:_jc_joliecarbundle_searchvoiture_modele_nom_choice_widget_options.html.twig'%}#}

{%block otherStylesheets%}
    {% stylesheets filter='cssrewrite'
    'css/search.css'
    output='compiled/main.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {%endstylesheets%}
{%endblock otherStylesheets%}
          
<div id="search" class="col-lg-offset-3 col-lg-6 col-sm-offset-2 col-sm-8 col-xs-12 row">
    {% set tailleCol = 'col-xs-12 col-sm-4 col-lg-4' %}
    {{form_start(form)}}
        <div id="bodySearch">
             <div class="form-group {{tailleCol}}">
                {#{{form_row(form.modele.marque)}}#}
                {{form_row(form.modele.nom)}}
            </div>
            <div class="form-group {{tailleCol}}">
                {{form_row(form.carburant)}}
                {{form_row(form.boitier)}}
            </div>  
            <div class="form-group {{tailleCol}}">
                {{form_row(form.prixMin)}}
                {{form_row(form.prixMax)}}
            </div>
            <div class="pull-right">
                {{form_row(form.rechercher)}}
            </div>  
            
        </div>
        
    {{form_end(form)}}
</div>  

