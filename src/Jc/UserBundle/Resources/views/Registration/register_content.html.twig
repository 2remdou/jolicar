
{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" id="formRegister" class="fos_user_registration_register contour">
    {#{{ form_widget(form) }}#}
    <div id="accordion">
        <h3>Informations Générales</h3>
        <div>
            {{ form_row(form.typeUser) }}
            {{ form_row(form.nom) }}
            {{ form_row(form.autreNom) }}
            {{ form_row(form.email,{'attr': {'placeholder':'Votre adresse email'} } ) }}
            {{ form_row(form.plainPassword,{'attr': {'placeholder':'Votre mot de passe'} } ) }}
        </div>
        <h3>Votre adresse</h3>
        <div>
            {{ form_row(form.adresse.telephone) }}
            {{ form_row(form.adresse.site) }}
            {{ form_row(form.adresse.ville) }}
            {{ form_row(form.adresse.quartier) }}
            {{ form_row(form.adresse.indicationLieu) }}
        </div>
    </div>
    <div>
        <button class="btn btn-default" type="submit" id="_submit" name="_submit">{{ 'registration.submit'|trans }}</button>
        {#<input type="submit" value="{{ 'registration.submit'|trans }}" />#}
    </div>
    {{ form_row(form._token) }}

</form>


