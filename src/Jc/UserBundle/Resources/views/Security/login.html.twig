{% extends "JcUserBundle::layout.html.twig" %}

{%block otherStylesheets%}
    {% stylesheets filter='cssrewrite'
    'css/login.css'
    output='compiled/main.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
    {%endstylesheets%}
{%endblock otherStylesheets%}
{% trans_default_domain 'FOSUserBundle' %}


{% block fos_user_content %}

    <form id="formLogin" action="{{ path("fos_user_security_check") }}" method="post" class="contour">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <div>
            <label for="username">{{ 'security.login.username'|trans }}</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" />
        </div>

        <div>
            <label for="password">{{ 'security.login.password'|trans }}</label>
            <input type="password" id="password" name="_password" required="required" class="form-control" />
        </div>
        <div>
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        </div>


        <button class="btn btn-default" type="submit" id="_submit" name="_submit">{{ 'security.login.submit'|trans }}</button>
        {#<input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"/>#}
    </form>
{% endblock fos_user_content %}
